!!! 5
html(lang='en')
	include includes/head
	body
		div#Container
			include includes/header
			section#Main
				h2 New Team
				form(action='/team/new', method='post')
					label(for="teamName") name
					input(type="text", name="teamName", placeholder='team name')
					label(for="race") race
					- if (races)
						select(name="race")
							- if (races.length)
								- for race in races
									option(value=race.id) #{race.name}
					label create team
					input(name='submit', type='submit', class='btn')
					a(href='/team/', class='btn') cancel
			include includes/footer