!!! 5
html(lang="en")
	include includes/head
	body
		div#Container
			include includes/header
			section#Main
				if (player)
					h3 #{player.name}
					table.table.table-bordered.table-striped
						tr
							td number
							td #{player.number}
						tr
							td movement
							td #{player.movement}
						tr
							td strength
							td #{player.strength}
						tr
							td agility
							td #{player.agility}
						tr
							td armour
							td #{player.armour}
						tr
							td skills
							td
								if (player.skills.length)
									ul.skills.unstyled
										each skill in player.skills
											li #{skill.name}
								else
									-
						tr
							td position
							td #{player.position.name}
						tr
							td race
							td #{player.race.name}
				else
					p Player not found!
			include includes/footer
